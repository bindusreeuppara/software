  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const investmentCtx = document.getElementById('investmentChart').getContext('2d');
    const sectorCtx = document.getElementById('sectorChart').getContext('2d');
    const retirementCtx = document.getElementById('retirementChart').getContext('2d');

    const investmentChart = new Chart(investmentCtx, {
      type: 'pie',
      data: {
        labels: [],
        datasets: [{ data: [], backgroundColor: [] }]
      }
    });

    const sectorChart = new Chart(sectorCtx, {
      type: 'pie',
      data: {
        labels: [],
        datasets: [{ data: [], backgroundColor: [] }]
      }
    });

    new Chart(retirementCtx, {
      type: 'doughnut',
      data: {
        labels: ['Saved', 'Remaining'],
        datasets: [{ data: [1000, 4000], backgroundColor: ['#0d6efd', '#e0e0e0'] }]
      },
      options: { cutout: '70%' }
    });

    const form = document.getElementById('investmentForm');
    const netWorthDisplay = document.getElementById('netWorthDisplay');
    let totalInvestment = 0;
    const sectorMap = new Map();

    form.addEventListener('submit', function(e) {
      e.preventDefault();
      const name = document.getElementById('invName').value;
      const units = parseFloat(document.getElementById('invUnits').value);
      const price = parseFloat(document.getElementById('invPrice').value);
      const sector = document.getElementById('invSector').value;
      if (!name || isNaN(units) || isNaN(price) || !sector) return;

      const amount = units * price;
      totalInvestment += amount;
      netWorthDisplay.textContent = `Net Worth: $${totalInvestment.toFixed(2)}`;

      investmentChart.data.labels.push(name);
      investmentChart.data.datasets[0].data.push(amount);
      investmentChart.data.datasets[0].backgroundColor.push(`#${Math.floor(Math.random()*16777215).toString(16)}`);
      investmentChart.update();

      // Sector aggregation
      if (sectorMap.has(sector)) {
        sectorMap.set(sector, sectorMap.get(sector) + amount);
      } else {
        sectorMap.set(sector, amount);
      }

      sectorChart.data.labels = Array.from(sectorMap.keys());
      sectorChart.data.datasets[0].data = Array.from(sectorMap.values());
      sectorChart.data.datasets[0].backgroundColor = sectorChart.data.labels.map(() => `#${Math.floor(Math.random()*16777215).toString(16)}`);
      sectorChart.update();

      form.reset();
    });

    fetch('https://newsapi.org/v2/top-headlines?category=business&apiKey=ce76a9ee82c143b5b3fc61b5f9851884')
      .then(res => res.json())
      .then(data => {
        const newsList = document.getElementById('newsList');
        data.articles.slice(0, 5).forEach(article => {
          const li = document.createElement('li');
          li.textContent = article.title;
          newsList.appendChild(li);
        });
      });
  </script>
